<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<DialogPane fx:id="dialogPane" xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.centrocultural.controllers.SeleccionarActividadDialogController">
    <headerText>
        Seleccionar Actividades para Autorizar
    </headerText>
    
    <content>
        <VBox spacing="10" prefWidth="400" prefHeight="300">
            <ListView fx:id="lstActividadesDisponibles" VBox.vgrow="ALWAYS">
                <placeholder>
                    <Label text="No hay actividades disponibles" />
                </placeholder>
            </ListView>
        </VBox>
    </content>
</DialogPane>