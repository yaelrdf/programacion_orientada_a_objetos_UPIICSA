<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.centrocultural.controllers.SeleccionarActividadDialogController"
      spacing="10.0" prefWidth="400.0" prefHeight="500.0">
   
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
   
    <Label text="Seleccionar Actividad" styleClass="dialog-title">
        <font>
            <Font size="14.0" />
        </font>
    </Label>
    
    <Separator/>
   
    <TableView fx:id="tablaActividades" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200.0">
                <cellValueFactory>
                    <PropertyValueFactory property="nombre" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="colClasificacion" text="ClasificaciÃ³n" prefWidth="180.0">
                <cellValueFactory>
                    <PropertyValueFactory property="clasificacion" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <placeholder>
            <Label text="No hay actividades disponibles" />
        </placeholder>
    </TableView>
   
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelar" prefWidth="80.0"/>
        <Button fx:id="btnSeleccionar" text="Seleccionar" onAction="#seleccionar" 
                styleClass="button-primary" prefWidth="100.0"/>
    </HBox>
</VBox>